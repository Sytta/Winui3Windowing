<Page
    x:Class="Windowing.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Windowing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button x:Name="Page1Button" Click="Page1Button_Click" Content="Show thread info">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Enter" Modifiers="Menu" />
                </Button.KeyboardAccelerators>
            </Button>
            <TextBlock x:Name="Page1TextBlock" />
            <TextBlock Text="Page1" />
        </StackPanel>
    </Grid>
</Page>
