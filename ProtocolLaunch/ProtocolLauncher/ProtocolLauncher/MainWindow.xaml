<Window
    x:Class="ProtocolLauncher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProtocolLauncher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <ScrollViewer>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Button
                Margin="4"
                Click="launcAsyncClick"
                Content="winui3.protocol.launch with LaunchUriAsync" />
            <Button
                Margin="4"
                Click="launchForResultClick"
                Content="winui3.protocol.launch with LaunchUriForResultAsync" />
        </StackPanel>
    </ScrollViewer>
</Window>
